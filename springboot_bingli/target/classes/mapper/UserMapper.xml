<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.UserDao">

    <select id="findBySearch" resultType="com.example.entity.User">
        select * from userinfo
        <where>
            <if test="users != null" >
                <if test="users.name != null and users.name !=''">
                    and name like concat('%',#{users.name},'%')
                </if>
                <if test="users.id != null and users.id !=''">
                    and id like concat('%',#{users.id},'%')
                </if>
                <if test="users.account != null and users.account !=''">
                    and id like concat('%',#{users.account},'%')
                </if>
            </if>

        </where>
    </select>
</mapper>